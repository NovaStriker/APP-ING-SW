<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/separador"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pantalla_pagos_cliente">

    <TextView
        android:id="@+id/txt_nombre_ventana"
        android:layout_width="300dp"
        android:layout_height="41dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="PAGOS"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/separador"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/lyout_frm_info_pagos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_nombre_ventana"
        app:srcCompat="@drawable/separador1" />

    <FrameLayout
        android:id="@+id/lyout_frm_info_pagos"
        android:layout_width="368dp"
        android:layout_height="160dp"
        android:background="@android:color/background_light"
        android:foregroundGravity="center_vertical|center"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="115dp">

        <TextView
            android:id="@+id/txt_info_formas_pagos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center"
            android:gravity="center_vertical|center"
            android:text="InformaciÃ³n sobre formas de pago"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:typeface="sans" />
    </FrameLayout>

    <Button
        android:id="@+id/btn_ir_registro_pago"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#0061c3"
        android:text="IR A REGISTRO DE PAGO"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lyout_frm_info_pagos" />
</android.support.constraint.ConstraintLayout>